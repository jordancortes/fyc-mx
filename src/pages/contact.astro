---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../public/images/contacto.jpg";
---

<Layout title="FYC Fragancias SA. de CV." , lang="en" , current_page="contact">
  <div class="grid grid-cols-12 py-5">
    <div class="col-span-12 md:col-span-4">
      <h2 class="page-headline">
        We'd love to<br />
        help you
      </h2>
    </div>
    <div class="col-span-12 md:col-span-8">
      <Image src={heroImage} alt="materia prima para fragancias" loading="eager" />
      <form id="contact-form" class="grid grid-cols-2 mt-4" action="">
        <div class="col-span-2 md:col-span-1">
          <h4 class="my-4">Contact Form</h4>
          <label for="field-name">Name.</label>
          <input type="text" id="field-name" />
          <label for="field-company">Organization.</label>
          <input type="text" id="field-company" />
          <label for="field-email">Email.</label>
          <input type="text" id="field-email" />
          <label for="field-phone">City.</label>
          <input type="text" id="field-phone" />
        </div>
        <div class="md:mt-40 col-span-2 md:col-span-1">
          <label for="field-comments">Message.</label>
          <textarea
            rows="8"
            id="field-comments"
            style="background: radial-gradient(circle at 0.5px 20.5px, black 1px, transparent 0); background-size: 2px 20px;"
          ></textarea>
          <input type="submit" class="uppercase bg-accent text-white font-bold px-20 md:text-sm" value="Send" />
        </div>
      </form>
    </div>
  </div>
</Layout>
